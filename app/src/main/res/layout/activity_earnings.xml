<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/earnings_header"
            android:layout_width="461dp"
            android:layout_height="87dp"
            android:background="#FF5224"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/earnings_title"
            android:layout_width="165dp"
            android:layout_height="54dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="15dp"
            android:text="@string/earnings"
            android:textColor="#FFFEFE"
            android:textSize="30sp"
            app:fontFamily="sans-serif"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/earnings_header" />

    <TextView
            android:id="@+id/earnings_back_button"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="38dp"
            android:layout_height="54dp"
            android:background="@color/colorPrimary"
            android:text="@string/backButton"
            android:textColor="@color/whiteFont"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/earnings_title"
            app:layout_constraintEnd_toStartOf="@+id/earnings_title"
            app:layout_constraintStart_toStartOf="@+id/earnings_header"
            app:layout_constraintTop_toTopOf="@+id/earnings_title" />

    <TextView
            android:id="@+id/earnings_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:textSize="50sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.235"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/earnings_header"
            app:layout_constraintVertical_bias="0.12"
            tools:text="$" />

    <TextView
            android:id="@+id/earnings_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_0_00"
            android:textSize="50sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/earnings_text"
            app:layout_constraintTop_toBottomOf="@+id/earnings_header"
            app:layout_constraintVertical_bias="0.118" />
</androidx.constraintlayout.widget.ConstraintLayout>