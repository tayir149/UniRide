<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.HistoryActivity">

    <TextView
            android:id="@+id/triplist_carDetails_text"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="@string/car_make_and_model"
            android:textStyle="bold"
            android:textSize="12sp"
            android:textColor="#050505"
            app:fontFamily="sans-serif"
            app:layout_constraintStart_toStartOf="@+id/triplist_eta_text"
            app:layout_constraintTop_toBottomOf="@+id/triplist_noPassengers_text" />

    <TextView
            android:id="@+id/triplist_carDetails_textValue"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            app:fontFamily="sans-serif"
            app:layout_constraintStart_toEndOf="@+id/triplist_carDetails_text"
            app:layout_constraintTop_toBottomOf="@+id/triplist_noPassengers_textValue" />

    <TextView
            android:id="@+id/triplist_noPassengers_textValue"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            app:fontFamily="sans-serif"
            app:layout_constraintStart_toEndOf="@+id/triplist_noPassengers_text"
            app:layout_constraintTop_toBottomOf="@+id/triplist_price_textValue" />

    <TextView
            android:id="@+id/triplist_price_textValue"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            app:fontFamily="sans-serif"
            app:layout_constraintStart_toEndOf="@+id/triplist_noPassengers_text"
            app:layout_constraintTop_toBottomOf="@+id/triplist_eta_textValue" />

    <TextView
            android:id="@+id/triplist_eta_textValue"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            app:fontFamily="sans-serif"
            app:layout_constraintStart_toEndOf="@+id/triplist_eta_text"
            app:layout_constraintTop_toBottomOf="@+id/triplist_pickup_textValue" />

    <TextView
            android:id="@+id/triplist_pickup_textValue"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            app:fontFamily="sans-serif"
            app:layout_constraintStart_toEndOf="@+id/triplist_pickup_text"
            app:layout_constraintTop_toBottomOf="@+id/triplist_date" />

    <Button
            android:id="@+id/triplist_route_button"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="25dp"
            android:background="#00F5F1F1"
            android:text="@string/history_show_route_button"
            android:textStyle="bold"
            android:textSize="12sp"
            app:fontFamily="sans-serif"
            app:layout_constraintStart_toStartOf="@+id/triplist_noPassengers_text"
            app:layout_constraintTop_toBottomOf="@+id/triplist_carDetails_textValue" />

    <Button
            android:id="@+id/triplist_message_button"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginStart="20dp"
            android:background="#00ECE3E3"
            android:text="@string/history_message_button"
            android:textColor="#16BE12"
            android:textStyle="bold"
            android:textSize="12sp"
            app:fontFamily="sans-serif"
            app:layout_constraintStart_toEndOf="@+id/triplist_route_button"
            app:layout_constraintTop_toTopOf="@+id/triplist_route_button" />

    <TextView
            android:id="@+id/triplist_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:text="@string/history_trip_date"
            android:textSize="18sp"
            android:textStyle="bold"
            app:fontFamily="sans-serif"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/triplist_eta_text"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="@string/history_ETA"
            android:textSize="12sp"
            android:textColor="#050505"
            android:textStyle="bold"
            app:fontFamily="sans-serif"
            app:layout_constraintStart_toStartOf="@+id/triplist_pickup_text"
            app:layout_constraintTop_toBottomOf="@+id/triplist_pickup_textValue" />

    <TextView
            android:id="@+id/triplist_pickup_text"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="@string/route"
            android:textStyle="bold"
            android:textSize="12sp"
            android:textColor="#050505"
            app:fontFamily="sans-serif"
            app:layout_constraintTop_toBottomOf="@+id/triplist_date"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteX="32dp" />

    <TextView
            android:id="@+id/triplist_noPassengers_text"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="@string/available_seats"
            android:textStyle="bold"
            android:textColor="#050505"
            android:textSize="12sp"
            app:fontFamily="sans-serif"
            app:layout_constraintStart_toStartOf="@+id/triplist_eta_text"
            app:layout_constraintTop_toBottomOf="@+id/triplist_price_text" />

    <TextView
            android:id="@+id/triplist_price_text"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="@string/price"
            android:textStyle="bold"
            android:textColor="#050505"
            android:textSize="12sp"
            app:fontFamily="sans-serif"
            app:layout_constraintStart_toStartOf="@+id/triplist_eta_text"
            app:layout_constraintTop_toBottomOf="@+id/triplist_eta_text" />

    <Button
            android:id="@+id/triplist_book_button"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginStart="20dp"
            android:background="#00ECE3E3"
            android:text="@string/book_trip"
            android:textColor="#16BE12"
            android:textStyle="bold"
            android:textSize="12sp"
            app:fontFamily="sans-serif"
            app:layout_constraintStart_toEndOf="@+id/triplist_message_button"
            app:layout_constraintTop_toTopOf="@+id/triplist_route_button" />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.9" />

</androidx.constraintlayout.widget.ConstraintLayout>