<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.HistoryActivity">

    <ListView
        android:id="@+id/triplist_listView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/triplist_header"
        app:layout_constraintVertical_bias="0.0" />


    <androidx.appcompat.widget.Toolbar
            android:id="@+id/triplist_header"
            android:layout_width="430dp"
            android:layout_height="81dp"
            android:background="#FF5224"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <Button
            android:id="@+id/triplist_back_button"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="38dp"
            android:layout_height="54dp"
            android:background="@color/colorPrimary"
            android:text="@string/backButton"
            android:textColor="@color/whiteFont"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/triplist_header"
            app:layout_constraintEnd_toStartOf="@+id/triplist_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/triplist_header" />

    <TextView
            android:id="@+id/triplist_title"
            android:layout_width="165dp"
            android:layout_height="54dp"
            android:layout_marginStart="60dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="10dp"
            android:text="@string/list_of_trips"
            android:textColor="#FFFEFE"
            android:textSize="30sp"
            app:fontFamily="sans-serif"
            app:layout_constraintBottom_toBottomOf="@+id/triplist_header"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>